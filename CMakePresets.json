{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 28,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "linux",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/linux",
      "installDir": "${sourceDir}/install/linux",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache",
        "CMAKE_C_COMPILER_LAUNCHER": "ccache",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_MAKE_PROGRAM": "ninja",
        "CMAKE_C_COMPILER": "/usr/bin/gcc-14",
        "CMAKE_CXX_COMPILER": "/usr/bin/g++-14"
      },
      "environment": {}
    },
    {
      "name": "macos",
      "displayName": "macOS Config",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/macos",
      "installDir": "${sourceDir}/install/macos",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "14.0",
        "VCPKG_HOST_TRIPLET": "arm64-osx",
        "VCPKG_TARGET_TRIPLET": "arm64-osx",
        "CMAKE_CXX_COMPILER_LAUNCHER": "/opt/homebrew/bin/ccache",
        "CMAKE_C_COMPILER_LAUNCHER": "/opt/homebrew/bin/ccache",
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++"
      },
      "environment": {}
    },
    {
      "name": "ios",
      "displayName": "iOS Config",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/ios",
      "installDir": "${sourceDir}/install/ios",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "VCPKG_HOST_TRIPLET": "arm64-osx",
        "VCPKG_TARGET_TRIPLET": "arm64-ios",
        "CMAKE_SYSTEM_NAME": "iOS",
        "CMAKE_IOS_INSTALL_COMBINED": "YES",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "14.0",
        "CMAKE_XCODE_ATTRIBUTE_ONLY_ACTIVE_ARCH": "NO",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_REQUIRED": "NO",
        "CMAKE_XCODE_ATTRIBUTE_CODE_SIGNING_ALLOWED": "NO"
      }
    },
    {
      "name": "windows",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/windows",
      "installDir": "${sourceDir}/install/windows",
      "toolchainFile": "$env{VCPKG_ROOT}\\scripts\\buildsystems\\vcpkg.cmake",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "VCPKG_HOST_TRIPLET": "x64-windows",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      },
      "environment": {}
    },
    {
      "name": "webassembly",
      "displayName": "WebAssembly Config",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/webassembly",
      "installDir": "${sourceDir}/install/webassembly",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF",
        "VCPKG_HOST_TRIPLET": "arm64-osx",
        "VCPKG_TARGET_TRIPLET": "wasm32-emscripten",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{EMSDK}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake"
        }
      },
      "environment": {}
    }
  ],
  "buildPresets": [
    {
      "name": "linux",
      "configurePreset": "linux"
    },
    {
      "name": "macos",
      "configurePreset": "macos"
    },
    {
      "name": "windows",
      "configurePreset": "windows"
    },
    {
      "name": "webassembly",
      "configurePreset": "webassembly"
    }
  ],
  "testPresets": [
    {
      "name": "linux",
      "configurePreset": "linux"
    }
  ]
}